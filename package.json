{
  "name": "eslint-config-esmc",
  "description": "Shareable and the default config for the `esmc` compiler",
  "license": "Apache-2.0",
  "licenseStart": "2018",
  "scripts": {
    "lint": "eslint src test --fix --quiet",
    "test": "nyc asia",
    "gitadd": "git status --porcelain && git add -A",
    "commit-dry": "yarn gitadd && gitcommit -sS",
    "precommit": "yarn lint && yarn test && yarn gitadd",
    "commit": "gitcommit -sS"
  },
  "engines": {
    "node": ">=6.9.0"
  },
  "dependencies": {
    "babel-eslint": "^10.0.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-config-prettier": "^3.0.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-react": "^7.10.0",
    "eslint-plugin-unicorn": "^4.0.3",
    "prettier": "^1.14.0"
  },
  "devDependencies": {
    "asia": "^0.19.7",
    "esmc": "^0.8.0",
    "gitcommit": "^1.0.9",
    "new-release": "^4.0.3",
    "nyc": "^13.0.0"
  },
  "files": [
    "src"
  ],
  "main": "src/index.js",
  "version": "0.0.0-semantically-released",
  "repository": "olstenlarck/eslint-config-esmc",
  "homepage": "https://github.com/olstenlarck/eslint-config-esmc",
  "author": "Charlike Mike Reagent (https://tunnckocore.com)",
  "publishConfig": {
    "access": "public"
  },
  "eslintConfig": {
    "extends": "./src/index.js"
  },
  "renovate": {
    "extends": "tunnckocore",
    "packageRules": [
      {
        "packageNames": ["eslint-plugin-node"],
        "allowedVersions": "< 7"
      },
      {
        "packageNames": ["eslint-plugin-unicorn"],
        "allowedVersions": "< 5"
      }
    ]
  },
  "nyc": {
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "lines": 100,
    "cache": true,
    "check-coverage": true,
    "reporter": [
      "lcov",
      "text"
    ],
    "exclude": [
      "test"
    ]
  },
  "verb": {
    "run": true,
    "toc": {
      "render": true,
      "method": "preWrite",
      "maxdepth": 3,
      "footer": ""
    },
    "layout": "empty",
    "tasks": [
      "readme"
    ],
    "related": {
      "list": [
        "asia",
        "gitcommit",
        "new-release",
        "xaxa",
        "charlike"
      ]
    },
    "lint": {
      "reflinks": true
    },
    "reflinks": [
      "new-release",
      "semantic-release"
    ]
  }
}
